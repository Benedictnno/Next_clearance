# EKSU Digital Clearance Management System - Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/eksu_clearance

# Prisma Database URL (for PostgreSQL/MySQL if using Prisma)
DATABASE_URL=postgresql://username:password@localhost:5432/eksu_clearance

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for session tokens (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Session cookie name
SESSION_NAME=eksu-clearance-session

# Session expiration time (in seconds)
SESSION_MAX_AGE=86400

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# EXTERNAL API INTEGRATION
# =============================================================================

# Core Student Management Platform (CoreEKSU) - Reference-Based Auth
CORE_API_URL=https://coreeksu.vercel.app
CORE_SYSTEM_SECRET=your-shared-secret-from-coreeksu-team

# External Student API Configuration
EXTERNAL_STUDENT_API_URL=https://coreeksu.vercel.app/api/users
EXTERNAL_STUDENT_API_TIMEOUT=10000
EXTERNAL_STUDENT_API_RETRY_ATTEMPTS=3

# External Officer API Configuration (for future integration)
EXTERNAL_OFFICER_API_URL=https://officer-api.eksu.edu.ng/api
EXTERNAL_OFFICER_API_KEY=your-officer-api-key-here
EXTERNAL_OFFICER_API_TIMEOUT=10000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Local file storage path
UPLOAD_DIR=./uploads

# Maximum file size (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# File storage provider (local, s3, cloudinary, vercel_blob)
STORAGE_PROVIDER=local

# Vercel Blob token (required when STORAGE_PROVIDER=vercel_blob or on Vercel)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eksu-clearance-uploads

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email service configuration
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@eksu-clearance.edu.ng

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@eksu-clearance.edu.ng

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=10
RATE_LIMIT_UPLOAD_MAX_REQUESTS=5

# CORS configuration
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
NODE_ENV=development

# Application port
PORT=3000

# Application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
VERCEL_URL=your-app-name.vercel.app

# Application name and description
APP_NAME=EKSU Digital Clearance Management System
APP_DESCRIPTION=Digital clearance management system for Ekiti State University
APP_VERSION=1.0.0

# University information
UNIVERSITY_NAME=Ekiti State University
UNIVERSITY_SHORT_NAME=EKSU
UNIVERSITY_WEBSITE=https://www.eksu.edu.ng

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/app.log

# Enable request logging
REQUEST_LOGGING_ENABLED=true

# =============================================================================
# PDF GENERATION CONFIGURATION
# =============================================================================

# PDF generation settings
PDF_TEMPLATE_DIR=./templates
PDF_OUTPUT_DIR=./generated-pdfs

# Certificate generation
CERTIFICATE_VERIFICATION_URL=https://your-domain.com/verify/certificate
CERTIFICATE_QR_CODE_SIZE=150

# NYSC form generation
NYSCT_VERIFICATION_URL=https://your-domain.com/verify/nysc
NYSCT_QR_CODE_SIZE=150

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Cache TTL (time to live) in seconds
CACHE_TTL=3600
SESSION_CACHE_TTL=86400

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_EXTERNAL_API=true
FEATURE_NOTIFICATIONS=true
FEATURE_PDF_GENERATION=true
FEATURE_FILE_UPLOAD=true
FEATURE_ANALYTICS=true

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Maintenance mode settings
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1